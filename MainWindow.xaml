<Window x:Class="Gasilica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Gasilica.Validations.Rules"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Gasilica" 
        SizeToContent="Height"
        Icon="/shutdown_off_close_exit_15253.ico"
        Width="500"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <materialDesign:Card Margin="2" Padding="0">
            <Grid>
                
           
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

       
            <TextBlock Name="OdborjavanjeTxt" Grid.Row="0" Margin="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignTextBlock}"></TextBlock>


                <TextBox Name="HoursTxt" Grid.Row="1" FontFamily="Segoe UI"  Grid.Column="0" Text="{Binding Hours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, ValidatesOnDataErrors=True}" HorizontalAlignment="Stretch" Margin="15,5,15,5" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Unesi sate" materialDesign:HintAssist.FontFamily="Segoe UI"  Grid.ColumnSpan="2"
         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
         >
                </TextBox>


                <TextBox Name="MnuteTxt" Grid.Row="2" Text="{Binding Minutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, ValidatesOnDataErrors=True}" Grid.Column="0" FontFamily="Segoe UI" Grid.ColumnSpan="2" materialDesign:HintAssist.Hint="Unesi minute"  HorizontalAlignment="Stretch" VerticalAlignment="Top" materialDesign:HintAssist.FontFamily="Segoe UI" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="15,5,15,5">
                    
                </TextBox>

        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="15,15,15,5">
           
            <CheckBox  Name="Toogle" ToolTip="Kada je ukljucena opcija onda ce se cuti zvuk upozorenja da ce doci do gasenja za manje od 30 sekundi"
      HorizontalAlignment="Left" VerticalAlignment="Top"
      Style="{StaticResource MaterialDesignDarkCheckBox}"
          >


            </CheckBox>

            <TextBlock Text="Ukljuci zvuk upozorenja"  HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
        </StackPanel>
        

        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right" Margin="2,20,2,15" Grid.ColumnSpan="2">
            <Button Click="StopButton_Click" Grid.Row="1" Name="StopButton" Content="Stopiraj"  Width="100" Margin="5" Style="{StaticResource MaterialDesignFlatDarkBgButton}"></Button>
            <Button Click="Button_Click" Grid.Row="1" Name="StarButton" Content="Start"  Width="100" Margin="5" Style="{StaticResource MaterialDesignFlatDarkBgButton}"></Button>
            <Button Click="Button_Click_1" Grid.Row="1" Content="Ugasi"  Width="100" Margin="5" Style="{StaticResource MaterialDesignFlatDarkBgButton}"></Button>
        </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
